{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "rootDir": "./",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": "./services", // Указывает корневую папку для относительных путей
    "paths": {
      "@main/*": ["main/*"],
      "@auth/*": ["auth/*"]
    }
    },
    "include": ["./**/*.ts", "services/main/index.ts"],
    "exclude": ["node_modules", "dist"]
  }
  